@model water.Models.Meter

@{
    ViewData["Title"] = "Добавление прибора учета";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/lib/jscolor/dist/jscolor.min.js"></script>
<h1>Добавление</h1>

<h4>Прибора учета</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorGraphHex" class="control-label"></label>
                <input asp-for="ColorGraphHex" data-jscolor="{hash:false, random:true}" class="form-control" />
                <span asp-validation-for="ColorGraphHex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться без сохранения</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
